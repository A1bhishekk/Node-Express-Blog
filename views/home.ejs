<!DOCTYPE html>
<html lang="en">
<head>
    <!-- include head.ejs -->
    <%- include('partials/head.ejs') %>
    <title>Technical Abhi Blog</title>
</head>
<body>
    <!-- include nav.ejs -->
    <%- include('partials/nav.ejs') %>

  <!-- <%= JSON.stringify(blogs) %> -->
  <div class="container mt-3 ">
    <div class="row gy-3 my-3">
      
    <% blogs.forEach(blog => { %>
      <div class="col-sm-6 col-md-3 ">
        <div class="card "  >
          <img class="card-img-top" src="<%=blog.coverImageURL %>" alt="Card image cap" width="100%" height="300">
          <div class="card-body">
            <h5 class="card-title"><%=blog.title %></h5>
            <p class="card-text"><%=blog.body.slice(0,50) %>...</p>
            <a href="/blog/<%=blog._id %>" class="btn btn-danger">View</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
  </div>



    <!-- include scripts.ejs -->
    <%- include('partials/scripts.ejs') %>
</body>
</html>